{
  "manifest_version": 3,
  "name": "Tab Audio Recorder",
  "version": "1.0",
  "description": "Records audio from the current tab",
  "permissions": [
    "scripting",
    "tabCapture",
    "downloads",
    "activeTab",
    "tabs",
    "offscreen"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon":"icon.png"
  
  }
}